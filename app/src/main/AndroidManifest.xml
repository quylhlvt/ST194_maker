<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <queries>
        <!-- Telegram -->
        <package android:name="org.telegram.messenger" />
        <package android:name="org.telegram.messenger.web" />
        <package android:name="org.thunderdog.challegram" />

        <!-- WhatsApp -->
        <package android:name="com.whatsapp" />
        <package android:name="com.whatsapp.w4b" />

        <!-- Intent filters for sharing -->
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="image/*" />
        </intent>
        <intent>
            <action android:name="android.intent.action.SEND_MULTIPLE" />
            <data android:mimeType="image/*" />
        </intent>
    </queries>

    <application
        android:name="com.fokalore.ocmaker.create.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        tools:replace="android:fullBackupContent"
        android:theme="@style/Theme.ST195">

        <activity
            android:name="com.fokalore.ocmaker.create.ui.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fokalore.ocmaker.create.ui.language.LanguageActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fokalore.ocmaker.create.ui.permision.PermissionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fokalore.ocmaker.create.ui.tutorial.TutorialActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fokalore.ocmaker.create.ui.my_creation.MyCreationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fokalore.ocmaker.create.ui.succes.SuccessActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fokalore.ocmaker.create.ui.view.ViewActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fokalore.ocmaker.create.ui.main.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fokalore.ocmaker.create.ui.setting.SettingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fokalore.ocmaker.create.ui.category.CategoryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fokalore.ocmaker.create.ui.customview.CustomviewActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fokalore.ocmaker.create.ui.quick_mix.QuickMixActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fokalore.ocmaker.create.ui.background.BackgroundActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
        <provider
            android:name="com.fokalore.ocmaker.create.utils.share.whatsapp.StickerContentProvider"
            android:authorities="com.fokalore.ocmaker.create.utils.share.whatsapp.StickerContentProvider"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.whatsapp.sticker.READ" />
        <service
            android:name="com.fokalore.ocmaker.create.service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="android.intent.action.PICK" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />
            </intent-filter>
        </service>
    </application>

</manifest>